{
    "window.title": "${dirty} ${rootName}:${activeEditorShort}",
    "extensions.ignoreRecommendations": true,
    "keyboard.dispatch": "keyCode",
    "editor.multiCursorModifier": "ctrlCmd",
    "workbench.startupEditor": "none",
    
    /**
     * Editor
     */
    "editor.fontFamily": "'Hack Nerd Font'",
    "window.zoomLevel": 0,
    "editor.renderIndentGuides": true,
    "editor.codeLens": false,
    "editor.minimap.enabled": false,
    "editor.rulers": [79, 120],
    "editor.formatOnPaste": false,

    /**
     * Explorer
     */
    "explorer.openEditors.visible": 1000,
    "explorer.autoReveal": false,
    "workbench.editor.enablePreview": false,

    /**
     * Files
     */
    "files.insertFinalNewline": true,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        "**/__pycache__": true,
        "**/*~": true,
        "**/node_modules": true,
        "**/tmp": true,
        "**/bower_components": true,
        "**/*.pyc": true,
        "tags": true,
        "**/*.log": true,
        "bin": true,
        "obj": true,
        "archived_logs": true,
        "logs": true,
        "**/dist": true,
        "**/build": true,
        "**/cover": true,
        "**/.cache": true,
        "**/htmlcov": true
    },
    
    /**
     * Git
     */
    "git.confirmSync": false,
    "git.autofetch": true,
    "git.enableSmartCommit": false,
    
    /**
     * Python Settings
     */
    "python.linting.maxNumberOfProblems": 100000,
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true,
    "python.workspaceSymbols.enabled": true,
    "python.jediMemoryLimit": -1,

    /**
     * Theme
     */
    "terminal.integrated.fontSize": 14,
    "workbench.colorCustomizations": {
        "[Monokai Pro]": {
            "activityBar.activeBorder": "#1e1e1e",
            "activityBar.foreground": "#FFD866",
        },
        "terminal.background": "#2D2A2E",
        "terminal.foreground": "#FCFCFA",
        "terminal.ansiRed": "#FF6188",
        "terminal.ansiGreen": "#A9DC76",
        "terminal.ansiYellow": "#FFD866",
        "terminal.ansiBlue": "#78DCE8",
        "terminal.ansiMagenta": "#AB9DF2",
        "terminal.ansiCyan": "#FC9867",
        "terminal.ansiWhite": "#FCFCFA"
    },
    "workbench.iconTheme": "Monokai Pro Icons",
    "workbench.colorTheme": "Monokai Pro",
    "window.menuBarVisibility": "hidden",
    "workbench.statusBar.feedback.visible": false,
    "problems.decorations.enabled": false,
    "explorer.confirmDragAndDrop": false,
    "workbench.tips.enabled": false,
    "workbench.tree.indent": 30,
    "breadcrumbs.enabled": false,
}
