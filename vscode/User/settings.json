// Place your settings in this file to overwrite the default settings
{
    "window.title": "${dirty}${activeEditorMedium}${separator}${rootName}",
    "extensions.ignoreRecommendations": true,
    "keyboard.dispatch": "keyCode",
    "markdown.preview.scrollPreviewWithEditorSelection": false,
    "atomKeymap.promptV3Features": true,
    "editor.multiCursorModifier": "ctrlCmd",
    "workbench.startupEditor": "none",

    /**
     * Editor
     */
    "editor.fontFamily": "'Hack'",
    "window.zoomLevel": 0,
    "editor.fontSize": 14,
    "editor.renderIndentGuides": true,
    "editor.codeLens": false,
    "editor.minimap.enabled": false,
    "editor.rulers": [79, 120],
    "editor.formatOnPaste": false,

    /**
     * Explorer
     */
    "explorer.openEditors.visible": 1000,
    "explorer.autoReveal": false,
    "workbench.editor.enablePreview": false,

    /**
     * Files
     */
    "files.insertFinalNewline": true,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        "**/__pycache__": true,
        "**/*~": true,
        "**/node_modules": true,
        "**/tmp": true,
        "**/bower_components": true,
        "**/*.pyc": true,
        "tags": true,
        "**/*.log": true,
        "bin": true,
        "obj": true,
        "archived_logs": true,
        "logs": true,
        "**/dist": true,
        "**/build": true,
        "**/cover": true,
        "**/.cache": true,
        "**/htmlcov": true
    },
    
    /**
     * Git
     */
    "git.confirmSync": false,
    "git.autofetch": true,
    "git.enableSmartCommit": false,
    
    /**
     * Python Settings
     */
    "python.linting.maxNumberOfProblems": 100000,
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true,
    "python.workspaceSymbols.enabled": true,

    /**
     * Theme
     */
    "terminal.integrated.fontSize": 15,
    "workbench.colorCustomizations": {
        "[Monokai]": {
            "sideBar.background": "#272822",
            "editorGroupHeader.tabsBackground": "#1e1f1c",
            "statusBar.background": "#1e1f1c",
            "editorGutter.background": "#1e1f1c"
        },
        /**
         * Terminal customization
         */
        "terminal.background": "#272822",
        "terminal.foreground": "#f8f8f2",
        "terminal.ansiRed": "#F92672",
        "terminal.ansiGreen": "#A6E22E",
        "terminal.ansiYellow": "#f4bf75",
        "terminal.ansiBlue": "#66D9EF",
        "terminal.ansiMagenta": "#ae81ff",
        "terminal.ansiCyan": "#a1efe4",
        "terminal.ansiWhite": "#f8f8f2"
    },
    "workbench.iconTheme": "vscode-icons",
    "workbench.colorTheme": "Monokai",
    "window.menuBarVisibility": "hidden",
    "workbench.statusBar.feedback.visible": false,
    "problems.decorations.enabled": false,
}
