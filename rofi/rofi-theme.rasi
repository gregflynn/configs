* {
    background: #{DS_BACKGROUND};
    blue      : #{DS_BLUE};
    green     : #{DS_GREEN};
    gray      : #{DS_GRAY};
    orange    : #{DS_ORANGE};
    purple    : #{DS_PURPLE};
    red       : #{DS_RED};
    white     : #{DS_WHITE};
    yellow    : #{DS_YELLOW};
}

window {
    padding: 0;
}

mainbox {
    background-color: @background;
    padding: 0;
    border: 4px;
    border-color: @yellow;
}

//
// TOP / Query
//
inputbar {
    background-color: @background;
    children: [prompt, textbox-prompt-colon, entry];
}

prompt {
    background-color: @yellow;
    text-color: @background;
    padding: 20px;
}

entry {
    background-color: @background;
    text-color: @yellow;
    padding: 20px 0 20px 0;
}

textbox-prompt-colon {
    background-color: @background;
    expand:     false;
    str:        "";
    text-color: @yellow;
    padding: 20px;
}

//
// Middle / Message
//
message {
    // Used to show result of rofi-calc queries
    background-color: @background;
    text-color: @blue;
    padding:    20px;
}

textbox {
    // Actual text of the rofi-calc response
    background-color: @background;
    text-color: @blue;
}

//
// Bottom / Results
//
listview {
    // List of items to choose from, or history in rofi-calc
    background-color: @background;
    text-color: @white;
    fixed-height: false;
    spacing: 4px;
    padding: 10px 0 10px 0;
    dynamic: true;
    lines: 10;
}

element {
    // A single item in the listview
    border: 0 0 0 8px;
    background-color: @background;
    padding: 10px 0 10px 15px;
}

element.normal.normal, element.alternate.normal {
    text-color: @white;
}

element.selected.normal {
    text-color: @yellow;
    border-color: @yellow;
}

element.normal.active, element.alternate.active {
    text-color: @green;
}

element.selected.active {
    text-color: @green;
    border-color:  @green;
}

element.normal.urgent, element.alternate.urgent {
    text-color: @red;
}

element.selected.urgent {
    text-color: @red;
    border-color: @red;
}
