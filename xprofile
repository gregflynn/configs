[[ -f ~/.Xmodmap ]] && type xmodmap > /dev/null 2>&1 && xmodmap ~/.Xmodmap

export QT_AUTO_SCREEN_SCALE_FACTOR=1

compton -b -c

# setup lightdm locking after 15 minutes
xautolock -time 15 -locker "i3lock -c 1B1D1E" &

# disable gpu LED on desktop
nvidia-settings --assign GPULogoBrightness=0

# startup applications
nm-applet&
redshift-gtk&
dropbox&
blueberry-tray&

export HOSTNAME=`hostname`
